{
  "name": "example-webpack-server",
  "version": "1.0.0",
  "description": "Example project illustrating bundling for the server with webpack",
  "main": "index.js",
  "homepage": "https://github.com/ncochard/example-webpack-server#readme",
  "author": "Nicolas Cochard",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ncochard/example-webpack-server.git"
  },
  "scripts": {
    "clean": "rimraf browser-bundle server-bundle",
    "build-browser": "webpack --config ./webpack-browser.config.js",
    "build-server": "webpack --config ./webpack-server.config.js",
    "minify-browser-bundle": "uglifyjs ./browser-bundle/app.js --output ./browser-bundle/app.min.js --compress --mangle",
    "minify-server-bundle": "uglifyjs ./server-bundle/app.js --output ./server-bundle/app.min.js --compress --mangle",
    "transpile": "npm run build-browser && npm run build-server",
    "minify": "npm run minify-browser-bundle && npm run minify-server-bundle",
    "build": "npm run transpile && npm run minify",
    "prepublish": "npm run build"
  },
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2015-node6": "^0.4.0",
    "path": "^0.12.7",
    "rimraf": "^2.6.1",
    "source-map-loader": "^0.2.1",
    "uglify-es": "^3.0.8",
    "webpack": "^2.5.1"
  },
  "dependencies": {
    "example-webpack-dependency": "git+https://github.com/ncochard/example-webpack-dependency.git"
  }
}
